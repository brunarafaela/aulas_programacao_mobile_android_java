<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:useDefaultMargins="true"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.bruna.qualbustivel.qualbustivel.MainActivity">

    <TextView
        android:id="@+id/gasLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/label_gas" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gasValueTextView"
            android:layout_width="50dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            />

        <SeekBar
            android:id="@+id/gasPriceSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:max="990" />

    </LinearLayout>


    <TextView
        android:id="@+id/ethanolTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/label_ethanol" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ethValueTextView"
            android:layout_width="50dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            />

        <SeekBar
            android:id="@+id/ethanolPriceSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="990" />

    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/resultTextInput"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/better_to_use" />
    </android.support.design.widget.TextInputLayout>


    <ImageView
        android:layout_marginTop="30dp"
        android:id="@+id/bestFuelImageView"
        android:layout_width="match_parent"
        android:layout_height="100dp" />


</LinearLayout>
